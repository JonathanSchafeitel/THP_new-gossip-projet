<div class="container justify-content-center" style="margin-left:35%;margin-right:35%;">

	<div class="panel-heading"><h1> Inscriptions </h1></div>
	<%= form_for @user, html: {class: 'form-horizontal'} do |f| %>

		<div class="form-group">
			<%= f.label :mail, "E-mail (C'est utilisé pour te connecter)", class:'col-md-4 control-label' %>
			<div class="col-md-3">
				<%= f.email_field :mail, class:'form-control'%>
			</div>
		</div>

		<div class="form-group">
			<%= f.label :first_name, "Ton prénom", class:'col-md-4 control-label' %>
			<div class="col-md-3">
				<%= f.text_field :first_name, class:'form-control'%>
			</div>
		</div>
		<div class="form-group">
			<%= f.label :last_name, "Ton nom de famille", class:'col-md-4 control-label' %>
			<div class="col-md-3">
				<%= f.text_field :last_name, class:'form-control'%>
			</div>
		</div>
		<div class="form-group">
			<%= f.label :age, "Ton âge", class:'col-md-4 control-label' %>
			<div class="col-md-3">
				<%= f.text_field :age, class:'form-control'%>
			</div>
		</div>
		<div class="form-group">
			<%= f.label :description, "Une courte description :", class:'col-md-4 control-label' %>
			<div class="col-md-3">
				<%= f.text_field :description, class:'form-control'%>
			</div>
		</div>

		<div class="form-group">
			<%= f.label :password, "Mot de passe(Plus de 6 caractères)", class:'col-md-4 control-label' %>
			<div class="col-md-3">
				<%= f.password_field :password, class:'form-control'%>
			</div>
		</div>

		<div class="form-group">
			<%= f.label :password_confirmation, "Confirmez le mot de passe", class:'col-md-4 control-label' %>
			<div class="col-md-3">
				<%= f.password_field :password_confirmation, class:'form-control'%>
			</div>
		</div>

		<div class="form-group">
			<%= f.label :city_id, "Quel ville ?", class:'col-md-4 control-label' %>
			<div class="col-md-3">
				<%= f.text_field :city_id, class:'form-control'%>
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-3 col-md-offset-4">
				<button type="submit" class="btn btn-primary" style="margin-top:2em;margin-left: 35%;"> S'inscrire 
				</button>
			</div>
		</div>



		<% end %>

	</div>

</div>



