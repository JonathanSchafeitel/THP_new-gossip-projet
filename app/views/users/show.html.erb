<div style="text-align: center;">

<h1>Page de profil de : <%= @user.first_name + " " + @user.last_name%></h1>



<p>Mail : <%= @user.mail %></p>

<p>âge : <%= @user.age %></p>

<p>Description : <%= @user.description %></p>

<p>La ville : <%= @user.city_id %></p>

<p>Voici ses potins :</p>

<p>
<% if logged_in? && params[:id].to_i == current_user.id.to_i %>
    
  <a href="<%= edit_user_path(@user.id) %>" class="btn btn-info">Editer</a>
  <%= button_to "Supprimer", user_path(@user.id), method: :delete, class: "btn btn-danger", data: {turbo_method: :delete, turbo_confirm: "Tu es sur?"} %>
  <% else %>
  <% end %>
<a href="<%= cities_path %>" class="btn btn-primary" style="margin-top:1em;">Revenir à l'index</a>
</p>
</div>
