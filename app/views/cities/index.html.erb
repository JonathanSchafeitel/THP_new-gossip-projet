<div style="text-align: center;">

<h1>Index des Villes </h1>

<p>
<a href="<%= new_city_path %>" class="btn btn-success">Cr√©er une ville</a>
</p>

<% @city.each do  |city| %>
 
  <div class="col">
  <div class="card">
  <div class="card-header">
  Ville numero : <%= city.id %>
  </div>
  <div class="card-body">
    <h5 class="card-title">Nom de la ville : <%= city.name %></h5>
    <p class="card-text">Code zip : <%= city.zip_code %></p>
    <a href="<%= city_path(city.id) %>" class="btn btn-primary">Lire la suite</a>
    <a href="<%= edit_city_path(city.id) %>" class="btn btn-info">Editer</a>
    <%= button_to "Supprimer", city_path(city.id), method: :delete, class: "btn btn-danger" %>
  </div>
</div>
</div>
 
  <% end %>
</div>